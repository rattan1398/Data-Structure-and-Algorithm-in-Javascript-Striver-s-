let n = prompt("Enter the length of the row: ");
for (let i = 0; i <n; i++) {
    let a=0;
    let star='';
   for(let j=n; j>i; j--){
    star += String.fromCharCode(65+a); /*String.fromCharCode function is used to convert a character code to a string, as the character are assigned
    with their ASCII value and starts from 65*/
    a+=1;
   }
   console.log(star.trim()); //The trim method is used to remove the trailing space from each row.  

}
